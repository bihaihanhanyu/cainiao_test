

#include "head.h"
#define _CRT_SECURE_NO_WARNINGS

// 函数声明

int main()
{

    // 初始化哈希表
   
    init_shelves();
    SystemConfig sys_config;
    ht = hash_init(1009);
    srand((int)time(NULL)); // 只设置一次随机数种子
    RBTree* Root = (RBTree*)malloc(sizeof(RBTree));
    Root->root = NULL;
    // 尝试加载配置
    if (!load_config(&sys_config)) {
        printf("配置文件不存在，创建默认配置...\n");
        init_default_config();
        load_config(&sys_config); // 重新加载
    }
    FILE* load = fopen("test.txt", "r");
    if (!load)
    {
        
        perror("test.txt cannot be opened!");
    }
    // 从文件读取数据
    else {
        read_from_file(load, &Root);
        if (load)
            fclose(load);
    }
    // 使用配置参数
    printf("当前管理员密码：%s\n", sys_config.admin_password);
    printf("当前容量阈值：%d\n", sys_config.capacity_threshold);


    // 显示菜单并处理用户输入
    int x = 1;
    while (x) {
        displayMenu();
        handleUserInput(&Root, ht, &sys_config, &x);
    }
    // 清理资源
    Clear_RBTREE(Root->root);
    free(Root);
    for (int i = 0; i < 6; i++) {
        Clear_RBTREE(shelves[i].tree->root);
        free(shelves[i].tree);
    }
    return 0;
}
